@model Core.Models.MaintenanceSpecification

@{
    ViewData["Title"] = "Maintenance";
}

<div class="row">
    <div class="col-4">
        <h1>Maintenance</h1>
    </div>
    <div class="offset-7 col-1">
        <a class="btn btn-dark" asp-action="Index">Back</a>
    </div>
</div>

<div id="sample-test-warning" class="d-none">
    <div class="navbar navbar-form navbar-expand-sm bg-danger border box-shadow rounded flex-row justify-content-between">
        <div class="navbar-brand text-dark">Sample Test</div>
        <div class="btn-group non-editable">
            <button id="approve-btn" type="button" class="btn btn-success mt-auto non-editable">Approved</button>
        </div>
    </div>

    <div class="border border-top-0 rounded mb-5">
        <div class="container">
            <strong>This car has been selected for a sample test, please inform customer</strong>
            <p>Name: @Model.Car.Driver.Name</p>
            <p>Phonenumber: @Model.Car.Driver.PhoneNumber</p>
        </div>
    </div>
</div>

<div>
    <div class="navbar navbar-form navbar-expand-sm bg-dark border box-shadow rounded flex-row justify-content-between">
        <div class="navbar-brand text-light"><b>@Model.MaintenanceSpecificationId</b></div>
        <div class="btn-group non-editable offset-md-11 pr-3">
            <button id="edit-btn" type="button" class="btn btn-danger mt-auto non-editable">Edit</button>
        </div>
        <div class="btn-group editable col-md-2 d-none">
            <button id="save-btn" type="button" value="Save" class="btn btn-success mt-auto">Save</button>
            <button id="cancel-btn" type="button" value="Cancel" class="btn btn-danger mt-auto">Cancel</button>
        </div>
    </div>

    <form id="car-form" class="pt-3 border border-top-0 rounded-bottom">
        <div class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="MaintenanceSpecificationId"
                   asp-for="MaintenanceSpecificationId" class="form-control" />
            <span asp-validation-for="MaintenanceSpecificationId" class="text-danger"></span>

            <div class="form-row">
                <div class="col-md-6">
                    <label asp-for="Car.LicenseNumber" class="control-label"></label>
                    <div class="ml-2 font-weight-bold">
                        <span>@Model.Car.LicenseNumber</span>
                    </div>
                    <hr class="mt-1 mb-2" />
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <label asp-for="Date" class="control-label"></label>
                    <div class="ml-2 font-weight-bold">
                        <span>@Model.Date.ToShortDateString()</span>
                    </div>
                    <hr class="mt-1 mb-2" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Milage" class="control-label"></label>
                    <div class="ml-2 font-weight-bold">
                        <span>@Model.Milage</span>
                    </div>
                    <hr class="mt-1 mb-2" />
                </div>
            </div>

            <div class="form-row mt-2">
                <div class="col-md-5">
                    <label asp-for="Car.Status" class="control-label"></label>
                    <div class="input-group">
                        <select id="status-select"
                                class="custom-select "
                                asp-for="Car.Status"
                                asp-items="@Html.GetEnumSelectList<Core.Enums.StatusEnum>()"
                                disabled>
                        </select>
                        <div class="input-group-append">
                            <button id="btn-0" type="button" class="status-btn btn btn-success d-none">Start</button>
                            <button id="btn-1" type="button" class="status-btn btn btn-warning d-none">Ready</button>
                            <button id="btn-2" type="button" class="status-btn btn btn-danger d-none">Sign off</button>
                            <button id="btn-3" type="button" class="status-btn btn btn-danger d-none" disabled>Sign off</button>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Car.Status" class="text-danger"></span>

                <div class="offset-md-1 col-md-6 non-editable">
                    <label asp-for="MaintenanceType" class="control-label"></label>
                    <div class="ml-2 font-weight-bold">
                        <span>@Model.MaintenanceType</span>
                    </div>
                    <hr class="mt-1 mb-2" />
                </div>

                <div class="offset-md-1 col-md-4 editable d-none">
                    <label asp-for="MaintenanceType" class="control-label"></label>
                    <div class="input-group">
                        <select id="maintenancetype-select"
                                class="custom-select "
                                asp-for="MaintenanceType"
                                asp-items="@Html.GetEnumSelectList<Core.Enums.MaintenanceTypeEnum>()">
                        </select>
                        <div class="input-group-append">
                        </div>
                    </div>
                </div>
                <span asp-validation-for="MaintenanceType" class="text-danger"></span>
            </div>

            <div class="form-row mt-2 mb-3">
                <div class="col-md-12">
                    <label asp-for="Description" class="control-label"></label>
                    <div class="input-group">
                        <textarea id="description"
                                  class="form-control"
                                  rows="5"
                                  asp-for="Description">

                        </textarea>
                    </div>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

@section scripts {
    <script>

        $(document).ready(function () {

            $('#btn-' + $('#status-select').val()).removeClass('d-none');

            $('#edit-btn').click(enableEdit);
            $('#cancel-btn').click(disableEdit);

            $('#description').focusout(saveDescription);

            $('#approve-btn').click(function () {
                $('#signoff-btn').prop('disabled', false);
                $('#sample-test-warning').remove();
            });

            function enableEdit() {
                $(".editable").removeClass('d-none');
                $(".non-editable").addClass('d-none');
                $('#maintenancetype-select option:contains(@Model.MaintenanceType)').prop('selected', true);
            }

            function disableEdit() {
                $(".editable").addClass('d-none');
                $(".non-editable").removeClass('d-none');
            }

            $('.status-btn').click(function () {
                let id = @Model.Car.CarId;
                let actionUrl = "/Api/CarsApiEndPoint/Maintenance/" + id;

                $.ajax({
                    type: "PUT",
                    url: actionUrl,
                    success: (data) => {
                        console.log('Succes');
                        console.log(data);
                        if (data.status != 4) {
                            $('#status-select option:eq(' + data.status + ')').prop('selected', true)
                            $('#btn-' + ($('#status-select').val() - 1)).addClass('d-none');
                            $('#btn-' + $('#status-select').val()).removeClass('d-none');
                        } else {
                            if (@Model.MaintenanceType === @Core.Enums.MaintenanceTypeEnum.MOT) {
                                $('#sample-test-warning').removeClass('d-none');
                                $('#btn-' + ($('#status-select').val() - 1)).addClass('d-none');
                                $('#btn-' + $('#status-select').val()).removeClass('d-none');
                            }
                        }
                    },
                    error: (data) => {
                        console.log('Failed');
                        console.log(data);
                    }
                });
            });

            function saveDescription() {
                let id = @Model.MaintenanceSpecificationId;
                let actionUrl = "/Api/MaintenanceSpecificationsApiEndpoint/Description/" + id;
                console.log($('#description').val());
                let description = $('#description').val();

                $.ajax({
                    type: "PUT",
                    url: actionUrl,
                    contentType: "application/json",
                    data: JSON.stringify(description),
                    success: (data) => {
                        console.log('Success');
                        console.log(data);
                    },
                    error: (data) => {
                        console.log('Failed');
                        console.log(data);
                    }
                });
            }
        });
    </script>
}
