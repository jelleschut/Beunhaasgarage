@model IEnumerable<Core.Models.MaintenanceSpecification>

@{
    ViewData["Title"] = "Work Log";
}

<h1>Work Log</h1>

<form asp-action="Index" method="get">
    <div class="form-row mb-3">
        <div class="col-2">
            <label for="search">Search</label>
            <div class="input-group no-color">
                <input type="text" class="form-control" id="search" name="search" value="@ViewData["SearchFilter"]" />
            </div>
        </div>

        <div class="col-2">
            <label for="statusfilter">Status</label>
            <div class="input-group no-color">
                <select name="statusfilter"
                        class="custom-select "
                        asp-for="@ViewData["StatusFilter"]"
                        asp-items="@Html.GetEnumSelectList<Core.Enums.StatusEnum>()">
                    <option>All</option>
                </select>
            </div>
        </div>

        <div class="col-3">
            <label for="datefilter">Registered Before</label>
            <div class="input-group no-color">
                <input type="date" class="form-control" name="datefilter" value="@ViewData["DateFilter"]" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-info">Filter</button>
                </div>
            </div>
        </div>

        <div class="offset-4 col-1 mt-auto">
            <a class="btn btn-success" asp-action="Create">New</a>
        </div>

    </div>
</form>

<table class="table table-striped table-hover table-sm">
    <thead class="thead-dark">
        <tr class="d-flex">
            <th class="col-1">
                <a class="text-light font-weight-bold" asp-action="Index" asp-route-order="@ViewData["IdSortParm"]">ID</a>
            </th>
            <th class="col-2">
                <a class="text-light font-weight-bold" asp-action="Index" asp-route-order="@ViewData["LicenseNumberSortParm"]">@Html.DisplayNameFor(model => model.Car.LicenseNumber)</a>
            </th>
            <th class="col-2">
                <a class="text-light font-weight-bold" asp-action="Index" asp-route-order="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Date)</a>
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Milage)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.MaintenanceType)
            </th>
            <th class="col-2">
                <a class="text-light font-weight-bold" asp-action="Index" asp-route-order="@ViewData["StatusSortParm"]">@Html.DisplayNameFor(model => model.Car.Status)</a>
            </th>
            <th class="col-1">

            </th>
        </tr>
    </thead>
    <tbody class="border">
        @foreach (var item in Model)
        {
            <tr class="d-flex">
                <td class="col-1">
                    @Html.DisplayFor(modelItem => item.MaintenanceSpecificationId)
                </td>
                <td class="col-2">
                    @Html.ActionLink(item.Car.LicenseNumber, "Details", "Cars", new { id = item.Car.CarId })
                </td>
                <td class="col-2">
                    @{
                        var dateValue = item.Date.ToShortDateString();
                    }
                    @Html.DisplayFor(modelitem => dateValue)
                </td>
                <td class="col-2">
                    @Html.DisplayFor(modelItem => item.Milage)
                </td>
                <td class="col-2">
                    @Html.DisplayFor(modelItem => item.MaintenanceType)
                </td>
                <td class="status-col col-2">
                    @Html.DisplayFor(modelItem => item.Car.Status)
                </td>
                <td class="col-1">
                    <a asp-action="Details" asp-route-id="@item.MaintenanceSpecificationId" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
