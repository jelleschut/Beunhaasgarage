@model IEnumerable<Core.Models.MaintenanceSpecification>

@{
    ViewData["Title"] = "Index";
}

<h1>List</h1>
<partial name="~/Views/Partial/Search/_Partial_Index_Search.cshtml" />
<table class="table table-striped table-hover table-sm">
    <thead class="thead-dark">
        <tr class="d-flex">
            <th class="col-2">
                <a class="text-light font-weight-bold" asp-action="Index" asp-route-order="@ViewData["LicenseNumberParm"]">@Html.DisplayNameFor(model => model.Car.LicenseNumber)</a>
            </th>
            <th class="col-2">
                <a class="text-light font-weight-bold" asp-action="Index" asp-route-order="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Date)</a>
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Milage)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="col-2">
                <a class="text-light font-weight-bold" asp-action="Index" asp-route-order="@ViewData["TypeSortParm"]">@Html.DisplayNameFor(model => model.Type)</a>
            </th>
            <th class="col-2">
            </th>
        </tr>
    </thead>
    <tbody class="border">
        @foreach (var item in Model)
        {
        <tr class="d-flex">
            <td class="col-2">
                @Html.ActionLink(item.Car.LicenseNumber, "Details", "Cars", new { id = item.Car.Id }, null)
            </td>
            <td class="col-2">
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td class="col-2">
                @Html.DisplayFor(modelItem => item.Milage)
            </td>
            <td class="col-2">
                @Html.ActionLink(item.Description, "Details", new { id = item.Id }, null)
            </td>
            <td class="col-2">
                @Html.ActionLink(item.Type.ToString(), "Details", new { id = item.Id }, null)
            </td>
            <td class="col-2">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
