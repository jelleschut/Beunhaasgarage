@model Core.Models.Owner

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-4">
        <h1>Owner</h1>
    </div>
    <div class="offset-7 col-1">
        <a class="btn btn-dark" asp-action="Index">Back</a>
    </div>
</div>

<form asp-action="Create">
    <div class="navbar navbar-form navbar-expand-sm bg-dark border box-shadow rounded flex-row justify-content-between">
        <div class="col-md-2 navbar-brand text-light"><b>New</b></div>
        <div class=" btn-group non-editable pr-3">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
    <div class="container pt-3 border border-top-0 rounded-bottom">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-row">
            <div class="col-md-4">
                <label asp-for="Name" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Name" class="form-control" />
                    <div class="input-group-append"></div>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="offset-md-2 col-md-4">
                <label asp-for="City" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="City" class="form-control" />
                    <div class="input-group-append"></div>
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4">
                <label asp-for="Street" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Street" class="form-control" />
                    <div class="input-group-append"></div>
                </div>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="offset-md-2 col-md-1">
                <label asp-for="HouseNumber" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="HouseNumber" class="form-control" />
                    <div class="input-group-append"></div>
                </div>
                <span asp-validation-for="HouseNumber" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label asp-for="Zipcode" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Zipcode" class="form-control" />
                    <div class="input-group-append"></div>
                </div>
                <span asp-validation-for="Zipcode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-4">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <div class="input-group-append"></div>
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="offset-md-2 col-md-4">
                <label asp-for="Email" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Email" class="form-control" />
                    <div class="input-group-append"></div>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </div>

        <div class="form-row mb-3">
            <div class="col-md-4">
                <label asp-for="OwnerType" class="control-label"></label>
                <div class="input-group">
                    <select asp-for="OwnerType" class="form-control"
                            asp-items="@Html.GetEnumSelectList<Core.Enums.OwnerEnum>()">
                    </select>
                    <div class="input-group-append"></div>
                </div>
                <span asp-validation-for="OwnerType" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
