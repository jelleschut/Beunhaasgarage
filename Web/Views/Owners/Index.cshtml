@model IEnumerable<Core.Models.Owner>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Type"]</h1>
<div class="row">
    <div class="col-4">
        <form asp-action="Index" method="get">
            <input type="hidden" name="type" value="@ViewData["Type"]"/>
            <label for="search" class="control-label"><b>Search</b></label>
            <div class="form-group input-group no-color">
                <input type="text" class="form-control" id="search" name="search" value="@ViewData["SearchFilter"]" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-info">Search</button>
                </div>
            </div>
        </form>
    </div>
    <div class="offset-7 col-1 mt-auto form-group">
        <a class="btn btn-success" asp-action="Create">New</a>
    </div>
</div>

<table class="table table-striped table-hover table-sm">
    <thead class="thead-dark">
        <tr class="d-flex">
            <th class="col-2">
                <a class="text-light font-weight-bold" asp-action="Index" asp-route-type="@ViewData["Type"]" asp-route-order="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th class="col-2">
                <a class="text-light font-weight-bold" asp-action="Index" asp-route-type="@ViewData["Type"]" asp-route-order="@ViewData["CitySortParm"]">@Html.DisplayNameFor(model => model.City)</a>
            </th>
            <th class="col-2">
                <div class="text-light font-weight-bold">
                    Address
                </div>
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
            <th class="col-2">
                <div class="text-light font-weight-bold">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </div>
            </th>
            <th class="col-2">
                <div class="text-light font-weight-bold">
                    @Html.DisplayNameFor(model => model.Email)
                </div>
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody class="border">
        @foreach (var item in Model)
        {
            <tr class="d-flex">
                <td class="col-2">
                    @Html.ActionLink(item.Name, "Details", new { id = item.OwnerId })
                </td>
                <td class="col-2">
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td class="col-2">
                    @Html.DisplayFor(modelItem => item.Street)  @Html.DisplayFor(modelItem => item.HouseNumber)
                </td>
                <td class="col-2">
                    @Html.DisplayFor(modelItem => item.Zipcode)
                </td>
                <td class="col-2">
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td class="col-2" style="word-wrap: break-word">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
    </tbody>
</table>
