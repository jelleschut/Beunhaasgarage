@model Core.Models.Car

<form id="@Model.GetType().Name.ToLower()-form" class="pt-3 border border-top-0 rounded-bottom">
    <div class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="d-none">
            <label asp-for="Id" class="control-label"></label>
            <input id="@Model.GetType().Name.ToLower()-id" asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="form-row">
            <div class="col-md-3">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input id="@Model.GetType().Name.ToLower()-licensenumber" asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-5">
                <label asp-for="Brand" class="control-label"></label>
                <div id="@Model.GetType().Name.ToLower()-group-brand-select" class="input-group">
                    <select id="@Model.GetType().Name.ToLower()-brand-select" asp-for="Brand" class="custom-select">
                        @if (Model.Brand != null)
                        {
                            <option selected value="@Model.Brand.Id">@Model.Brand.Name</option>
                        }
                    </select>
                    <div class="input-group-append">
                        <button id="new-@Model.GetType().Name.ToLower()-brand-btn" class="btn btn-success" type="button">New</button>
                    </div>
                </div>

                <div id="@Model.GetType().Name.ToLower()-group-brand-text" class="input-group d-none">
                    <input class="form-control" id="@Model.GetType().Name.ToLower()-brand-text" data-val="true" data-val-required="The Brand field is required." />
                    <div class="input-group-append">
                        <button id="add-new-brand-btn" class="btn btn-success" type="button">Save</button>
                    </div>
                    <div class="input-group-append">
                        <button id="cancel-new-brand-btn" class="btn btn-danger" type="button">Cancel</button>
                    </div>
                </div>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>


            <div class="offset-md-1 col-md-5">
                <label asp-for="Model" class="control-label"></label>
                <div id="@Model.GetType().Name.ToLower()-group-model-select" class="input-group">
                    <select id="@Model.GetType().Name.ToLower()-model-select" asp-for="Model" class="custom-select">
                        @if (Model.Model != null)
                        {
                            <option selected value="@Model.Model.Id">@Model.Model.Name</option>
                        }
                    </select>
                    <div class="input-group-append">
                        <button id="new-@Model.GetType().Name.ToLower()-model-btn" class="btn btn-success" type="button">New</button>
                    </div>
                </div>

                <div id="@Model.GetType().Name.ToLower()-group-model-text" class="input-group d-none">
                    <input class="form-control" id="@Model.GetType().Name.ToLower()-model-text" data-val="true" data-val-required="The Model field is required." />
                    <div class="input-group-append">
                        <button id="add-new-model-btn" class="btn btn-success" type="button">Save</button>
                    </div>
                    <div class="input-group-append">
                        <button id="cancel-@Model.GetType().Name.ToLower()-model-btn" class="btn btn-danger" type="button">Cancel</button>
                    </div>
                </div>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
        </div>


        <div class="form-row form-group">
            <div class="col-md-4">
                <label asp-for="Owner" class="control-label"></label>
                <div id="@Model.GetType().Name.ToLower()-group-owner-select" class="input-group">
                    <select id="@Model.GetType().Name.ToLower()-owner-select" asp-for="Model" class="custom-select">
                        @if (Model.Owner != null)
                        {
                            <option selected value="@Model.Owner.Id">@Model.Owner.Name</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>

            <div class="col-md-2 mt-auto">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="radio-owner-group" id="radio-customer" value="Customer" checked>
                    <label class="form-check-label" for="radio-customer">Customer</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="radio-owner-group" id="radio-leasecompany" value="LeaseCompany">
                    <label class="form-check-label" for="radio-leasecompany">Lease Company</label>
                </div>
            </div>

            <div class="col-md-4">
                <label asp-for="Customer" class="control-label"></label>
                <div id="@Model.GetType().Name.ToLower()-group-customer-select" class="input-group">
                    <select id="@Model.GetType().Name.ToLower()-customer-select" asp-for="Customer" class="custom-select">
                        @if (Model.Customer != null)
                        {
                            <option selected value="@Model.Customer.Id">@Model.Customer.Name</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>

            <div id="@Model.GetType().Name.ToLower()-btn-group" class="offset-md-1 col-md-1 d-flex">
                <button id="@Model.GetType().Name.ToLower()-save-btn" type="button" class="btn btn-success mt-auto">Save</button>
                <button id="@Model.GetType().Name.ToLower()-edit-btn" type="button" class="btn btn-danger d-none mt-auto">Edit</button>
                <div class="btn-group">
                    <button id="@Model.GetType().Name.ToLower()-update-btn" type="button" value="Update" class="btn btn-success d-none mt-auto">Update</button>
                    <button id="@Model.GetType().Name.ToLower()-cancel-btn" type="button" value="Cancel" class="btn btn-danger d-none mt-auto">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>
