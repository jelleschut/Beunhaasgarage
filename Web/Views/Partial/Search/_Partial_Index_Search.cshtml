<div class="row">
    <div class="col-4">
        <form asp-action="Index" method="get">
            <label for="search" class="control-label"><b>Search</b></label>
            <div class="form-group input-group no-color">
                <input type="text" class="form-control" id="search" name="search" value="@ViewData["CurrentFilter"]" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-info">Search</button>
                </div>
            </div>
        </form>
    </div>
    <div class="offset-7 col-1 mt-auto form-group">
        <a class="btn btn-success" asp-action="Details">New</a>
    </div>
</div>